# Use the official Apache image
FROM httpd:latest

# Copy your custom Apache configuration files to the container
COPY ./apache-config/httpd.conf /usr/local/apache2/conf/httpd.conf
COPY ./apache-config/httpd-vhosts.conf /usr/local/apache2/conf/extra/httpd-vhosts.conf

# Copy your PHP file to the container
COPY ./php-app/index.php /usr/local/apache2/htdocs/

# Expose port 80
EXPOSE 80
